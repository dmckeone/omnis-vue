{
  "name": "omnis-vue",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run type-check && vite build && mkdir dist/omnis-vue && mv dist/omnis-vue.html dist/omnis-vue/omnis-vue.htm",
    "watch": "vite build --watch",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write .",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:build-ci": "histoire build -c histoire-ci.config.ts",
    "story:preview": "histoire preview",
    "type-check": "vue-tsc -p tsconfig.app.json --noEmit --composite false",
    "type-watch": "vue-tsc --watch -p tsconfig.app.json --noEmit --composite false",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "format",
    "lint"
  ],
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "daisyui": "^5.1.26",
    "pinia": "^3.0.3",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "1.0.0-alpha.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.15",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/language-server": "^3.1.0",
    "@vue/tsconfig": "^0.8.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.5.0",
    "histoire": "1.0.0-alpha.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-multiple": "^0.2.0",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-static-copy": "^3.1.3",
    "vue-tsc": "^3.1.0"
  }
}
